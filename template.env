# Environment variables for the application
# ENV for database connection for PostgreSQL or SQLite

#PostgreSQL connection string
DATABASE_PROVIDER=postgresql
DATABASE_URL=postgresql://user:password@db:5432/spotifydb?schema=public
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=spotifydb

#Meillisearch connection string
MEILI_HOST=http://localhost:7701
MEILI_MASTER_KEY=YourMeilisearchMasterKeyThatsNeededtoBe16BytesLongAtLeast

#Meilisearch keys for admin and search , these are automatically generated when you start the Meilisearch container
#please copy them from the logs the first time you run the docker compose

MEILI_ADMIN_KEY=
MEILI_SEARCH_KEY=



# Backend session secret for secure cookie handling , please change this to a secure random string
SESSION_SECRET=mysecret

# API URL for the frontend to connect to the backend
API_HOST=0.0.0.0
API_PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:4200

# Global variables for the application
GLOBAL_USERNAME=admin
GLOBAL_PASSWORD=password

